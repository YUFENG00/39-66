$base-size 10px
img-size(n)
	height $base-size * n
	width $base-size * n
	

.nav-item 
	position relative
	width auto
	height $base-size * 5
	background #000
	font-size $base-size + 8
	color #fff
	text-align center

.logo 
	position absolute
	img-size(5)
	margin-left $base-size * 2
	margin-top $base-size

.menu 
	margin-right $base-size * 2
	margin-top $base-size
	float right


/* 超小屏幕（手机，小于 768px） */
@media (max-width: 768px) 
	.logo 
		position absolute
		img-size(5)
		margin-top $base-size
		margin-left 45%

.menu-item 
	position fixed
	bottom 0
	display flex
	justify-content space-between
	width 100%
	background #ccc
	z-index 100

.menu 
	font-size $base-size * 2
	color #000



